<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>

<div class="center hero-unit">
	<h1>Jason's Custom Web App</h1>
	<h2>
		Here is my customized web app, designed to show friends, the public, and potential employers my skills using Ruby on Rails
	</h2>
	<%= link_to "Sign up Now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<div>
	<p>
		Signing in or signing up will give users the ability to make blog posts, microposts, and follow the actions of other users.  Very Twitter-esque, but a good starting point, no?
	</p>
</div>

<% end %>